{
  "manifest_version": 3,
  "name": "SideKick",
  "version": "1.0",
  "description": "View a URL in a side panel alongside your current page",
  "permissions": ["sidePanel", "activeTab", "tabs", "contextMenus", "storage"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Open SideKick Panel",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "panel.html"
  },

  "background": {
    "service_worker": "background.js"
  }
}
